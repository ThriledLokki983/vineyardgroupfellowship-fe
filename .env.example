# API Configuration
# Set to 'true' to use local development server, 'false' to use production server
VITE_USE_LOCAL_ENDPOINT=true
VITE_DEV_ENVIRONMENT=true

# Local development API endpoint
VITE_LOCAL_API_URL=http://localhost:8001/api/v1

# Production API endpoint
VITE_PRODUCTION_API_URL=https://api.vineyardgroupfellowship.org/api/v1

# Debug mode (optional) - enables additional logging
VITE_DEBUG_API=false

# Sentry Configuration (Production Error Monitoring)
# Get your DSN from: https://sentry.io/settings/[your-org]/projects/[your-project]/keys/
# IMPORTANT: Only needed in production - leave empty for local development
VITE_SENTRY_DSN=

# Application version (for Sentry release tracking)
VITE_APP_VERSION=1.0.0

# Google Maps API Key
# IMPORTANT: NEVER commit your actual API key to Git!
# Get your API key from: https://console.cloud.google.com/apis/credentials
# Restrict the key to:
#   - HTTP referrers: localhost:3000/*, vineyardgroupfellowship.org/*
#   - APIs: Maps JavaScript API, Places API (New)
VITE_GOOGLE_MAPS_API_KEY=your-google-maps-api-key-here